<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Hello <%= current_user.email %>! </br></h2>
      <%= link_to "Edit my data", edit_user_registration_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3>Actions</h3>
      <% if (current_user.role? 'author') %>
        <%= link_to "Add new article", new_article_path %><br>
      <% end %>
      <% if (current_user.is? "translator") || (current_user.is? "moderator") || (current_user.is? "admin") || (current_user.is? "superadmin") %>
        <h2>Translations</h2>
        Debug option: <%= current_user.debug_translations %>
        <h3>Do not view missing translations in pages</h3>
          <%= link_to "Set debug_option to false to avoid seeing missing translations", edit_users_path(id: current_user.id, user: {debug_translations: ""}), method: :post %>
        <h3>View missing translations in pages</h3>
          <%= link_to "Set debug_option to see missing translations", edit_users_path(id: current_user.id, user: {debug_translations: "missing"}), method: :post %>
        <h3>View all translations in pages</h3>
          <%= link_to "Set debug_option to see all translations", edit_users_path(id: current_user.id, user: {debug_translations: "all"}), method: :post %>
        <h3>Go to translation center</h3>
        <%= link_to "Go to translation center", translation_center_path %>
      <% end %>
    </div>
  </div>
</div>

