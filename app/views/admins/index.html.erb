<h1>Users</h1>

<%= link_to "All Users", :action => "index" %>
|
<%= link_to "Users awaiting approval", :action => "index", :approved => "false" %>

<table class="table">
  <tr>
    <td>
      User
    </td>
    <td>
      Aproved?
    </td>
    <td>
      Actions
    </td>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= user.approved %>
      </td>
      <td>
        <%= link_to "Edit", edit_user_path(user) %>
      </td>
    </tr>
  <% end %>
</table>