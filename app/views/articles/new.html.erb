<%= render 'users/navbar' %>
<div class="container new-article-container">
  <h1>New article</h1>
  <div class="col-md-6">
    <%= form_for :article, url: {action: 'create'}, html: {multipart: true, class: "form-horizontal", role: 'form'} do |f| %>
      <% if @article_language %>
        <h4>This is a translation from article: </h4>
        <%= link_to @original_article do %> 
          <h5><%= @original_article.title %><small>[<%= @original_article.lang %>]</small></h5>
        <% end %>
        <%= f.hidden_field :article_language, value: @article_language.id %>
      <% else %>
        <h2></h2>
        <h4>This is a new article, not a translation from another one</h4>
      <% end %>
      <div class="form-group">
        <%= label(:article, :title, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: 'form-control', id: 'article_title', placeholder: "Set your title here", value: (@original_article.title if @original_article) %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :subtitle, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.text_field :subtitle, class: 'form-control', id: 'article_subtitle', placeholder: "Set your subtitle here", value: (@original_article.subtitle if @original_article) %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :excerpt, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.text_field :excerpt, class: 'form-control', id: 'article_excerpt', placeholder: "Set your excerpt here", value: (@original_article.excerpt if @original_article) %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :author, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.text_field :author, class: 'form-control', id: 'article_author', placeholder: "Set the article author here", value: (@original_article.author if @original_article) %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :article_image, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.file_field :article_image, class: 'form-control', id: 'article_image', placeholder: "Set the image url here" %>
          <%= f.hidden_field :article_image_cache %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :remote_article_image_url, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.text_field :remote_article_image_url, class: 'form-control', id: 'remote_article_image_url', placeholder: "Set the image url here" %>
        </div>
        <div class="col-sm-10 edit-article-image">
          <% if @original_article %>
            <% if @original_article.article_image? %>
              <%= image_tag @original_article.article_image_url %>
            <% else %>
              Original article does not have an image
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :video_url, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.text_field :video_url, class: 'form-control', id: 'article_video_url', placeholder: "Set the link to the video", value: (@original_article.video_url if @original_article) %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :hover_frase, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.text_field :hover_frase, class: 'form-control', id: 'article_hover_frase', placeholder: "Set the image hover frase", value: (@original_article.hover_frase if @original_article) %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :lang, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.select :lang, TranslationCenter::TranslationKey.langs_stats.keys.reject {|l| @original_article.nil? ? nil : @article_language.translated_languages.include?(l.to_s)}, {selected: params[:lang] ? params[:lang] : nil}, {class: "select2"} %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :category, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.collection_select :category_ids, Category.all, :id, :name, {selected: @original_article.nil? ? nil : @original_article.categories.map(&:id) }, {class: "select2", :multiple => true} %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :content, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <div id="wysihtml5-toolbar">
            <div class="block">
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="bold" title="CTRL+B">bold</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="italic" title="CTRL+I">italic</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="underline" title="CTRL+U">underline</a>
            </div>
            <div class="block">
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="createLink">link</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="removeLink"><s>link</s></a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="insertImage">image</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h1">h1</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h2">h2</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h3">h3</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="p">p</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="pre">pre</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="formatBlock" data-wysihtml5-command-blank-value="true">plaintext</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="insertBlockQuote">blockquote</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="formatCode" data-wysihtml5-command-value="language-html">Code</a>
            </div>
            
            <div class="block">
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="fontSizeStyle">Size</a>
              <div data-wysihtml5-dialog="fontSizeStyle" style="display: none;">
                Size:
                <input data-wysihtml5-dialog-field="size" style="width: 60px;" value="" type="text">
                <a data-wysihtml5-dialog-action="save">OK</a>&nbsp;<a data-wysihtml5-dialog-action="cancel">Cancel</a>
              </div>
            </div>
            
            <div class="block">
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="insertUnorderedList">â€¢ List</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="insertOrderedList">1. List</a>
            </div>
            <div class="block">
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="outdentList">&lt;-</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="indentList">-&gt;</a>
            </div>

            <div class="block">
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="alignLeftStyle">alignLeft</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="alignRightStyle">alignRight</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="alignCenterStyle">alignCenter</a>
            </div>
          
            <div class="block">
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="foreColorStyle">Color</a>
              <div data-wysihtml5-dialog="foreColorStyle" style="display: none;">
                Color:
                <input data-wysihtml5-dialog-field="color" value="rgba(0,0,0,1)" type="text">
                <a data-wysihtml5-dialog-action="save">OK</a>&nbsp;<a data-wysihtml5-dialog-action="cancel">Cancel</a>
              </div>
            </div>
            
            <div class="block">
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="bgColorStyle">BG Color</a>
              <div data-wysihtml5-dialog="bgColorStyle" style="display: none;">
                Color:
                <input data-wysihtml5-dialog-field="color" value="rgba(0,0,0,1)" type="text">
                <a data-wysihtml5-dialog-action="save">OK</a>&nbsp;<a data-wysihtml5-dialog-action="cancel">Cancel</a>
              </div>
            </div>
            
            <div class="block">
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="undo">undo</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="redo">redo</a>
            </div>
          
            <!--div class="block">
              <a data-wysihtml5-action="showSource">HTML</a>
            </div-->

            <div class="block" data-wysihtml5-hiddentools="table" style="display: none;">
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="mergeTableCells">Merge</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="addTableCells" data-wysihtml5-command-value="above">row-before</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="addTableCells" data-wysihtml5-command-value="below">row-after</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="addTableCells" data-wysihtml5-command-value="before">col-before</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="addTableCells" data-wysihtml5-command-value="after">col-after</a>
            
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="deleteTableCells" data-wysihtml5-command-value="row">delete row</a>
              <a unselectable="on" href="javascript:;" data-wysihtml5-command="deleteTableCells" data-wysihtml5-command-value="column">delete col</a>
            
            </div>

          
            <div data-wysihtml5-dialog="createLink" style="display: none;">
              <label>
                Link:
                <input data-wysihtml5-dialog-field="href" value="http://">
              </label>
              <a data-wysihtml5-dialog-action="save">OK</a>&nbsp;<a data-wysihtml5-dialog-action="cancel">Cancel</a>
            </div>
            <div data-wysihtml5-dialog="insertImage" style="display: none;">
              <label>
                Image:
                <input data-wysihtml5-dialog-field="src" value="http://">
              </label>
              <label>
                Align:
                <select data-wysihtml5-dialog-field="className">
                  <option value="">default</option>
                  <option value="wysiwyg-float-left">left</option>
                  <option value="wysiwyg-float-right">right</option>
                </select>
              </label>
              <a data-wysihtml5-dialog-action="save">OK</a>&nbsp;<a data-wysihtml5-dialog-action="cancel">Cancel</a>
            </div>
          
          </div>
          <%= f.text_area :content, class: 'form-control', id: 'wysihtml5-textarea', placeholder: "Set the article content here", size: "60x12", value: (@original_article.content if @original_article) %>
        </div>
      </div>
      <div class="form-group">
        <%= label(:article, :publish_at, class: 'col-sm-2 control-label') %>
        <div class="col-sm-10">
          <%= f.date_field :publish_at, class: 'form-control', id: 'article_published_at', placeholder: "Set the date to publish the article", :'data-provide' =>'datepicker',value: Date.today %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Create", class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
   var editor = new wysihtml5.Editor("wysihtml5-textarea", { // id of textarea element
      toolbar:      "wysihtml5-toolbar", // id of toolbar element
      stylesheets:  "<%= stylesheet_path('wysihtml') %>", // optional, css to style the editor's content
      parserRules:  wysihtml5ParserRules, // defined in parser rules set
      //showToolbarAfterInit: false
   });
</script>