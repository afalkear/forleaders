<% title @article.title %>

<div class="single-article-container container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="container">
        <div class="row articles-categories-container">
          <div class="col-md-12 articles-categories">
            <%= render 'articles_categories' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 main-article-container">
            <div class="container">
              <div class="row">
                <div class="col-md-12 article-info-container">
                  <h1><%= @article.title %></h1>
                  <div class="container">
                    <div class="row">
                      <div class="col-md-2 article-author-photo">
                        <%= image_tag "#{@article.author.downcase}.jpg" %>
                      </div>
                      <div class="col-md-10 article-metadata">
                        <div class="container">
                          <div class="row">
                            <div class="article-author">
                              <%= @article.author %>
                            </div>
                            <div class="article-square articles-category-<%= @article.categories.first.name.parameterize.underscore %>">
                              
                            </div>
                            <div class="article-category">
                              <%= t("#{@article.categories.first.name.parameterize.underscore}") %>
                            </div>
                          </div>
                          <div class="row article-tag">
                            <% if @article.tags.count > 0 %> 
                              | <% @article.tags.each do |tag| %> 
                              <%= tag.name %> |
                              <% end %>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <hr/>
                  <div class="container">
                    <div class="row article-content">
                      <h2><%= @article.subtitle %></h2>
                      <p><%= @article.content %></p>
                    </div>
                  </div>
                  <hr>
                  <div class="container related-articles">
                    <h2>
                      TEXTOS RELACIONADOS
                    </h2>                
                    <div class="row">
                    <% 3.times do |i| %>
                      <div class="col-md-4">
                        <div>
                          <%= image_tag @related_articles[i].article_image.url %>
                        </div>
                        <div class="related-article-title">
                          <%= @related_articles[i].title %>
                        </div>
                      </div>
                    <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4 article-sidebar">
            <div class="content latest-articles">
              <h2>ULTIMOS ARTIGOS</h2>
              <% 3.times do |i| %>
                <div class="row">
                  <%= image_tag @latest_articles[i].article_image.url %>
                  <div class="related-article-title">
                    <%= @latest_articles[i].title %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="content articles-follow-us">
              <h2>FOLLOW US ON FACEBOOK</h2>
              
            </div>
            <div class="content">
              <h2>NOSSA NEWSLETTER</h2>
              <%= render 'static_pages/mailchimp_form' %>
            </div>
            <div class="content article-sidebar-author-container">
              <div class="row">
                <h2>O AUTOR</h2>
                <%= image_tag "#{@article.author.downcase}.jpg" %>
                <div>
                  <h3><%= @article.author %></h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>