<div id="wysihtml5-toolbar" style="display: none;">
  <a data-wysihtml5-command="bold" title="CTRL+B" class="btn btn-default"><span class="glyphicon glyphicon-bold" aria-hidden="true"></span></a>
  <a data-wysihtml5-command="italic" title="CTRL+I" class="btn btn-default"><span class="glyphicon glyphicon-italic" aria-hidden="true"></span></a>
  <a data-wysihtml5-command="createLink" class="btn btn-default"><span class="glyphicon glyphicon-link" aria-hidden="true"></span></a>
  <a data-wysihtml5-command="insertImage" class="btn btn-default"><span class="glyphicon glyphicon-picture" aria-hidden="true"></span></a>
  <a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h1" class="btn btn-default">h1</a>
  <a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h2" class="btn btn-default">h2</a>
  <a data-wysihtml5-command="insertUnorderedList" class="btn btn-default"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a>
  <a data-wysihtml5-command="insertOrderedList" class="btn btn-default"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span></a>
  <a data-wysihtml5-command="undo" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span></a>
  <a data-wysihtml5-command="redo" class="btn btn-default"><span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></a>
  <a data-wysihtml5-command="insertSpeech" class="btn btn-default">speech</a>
  <a data-wysihtml5-action="change_view" class="btn btn-default"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
  
  <div data-wysihtml5-dialog="createLink" style="display: none;">
    <label>
      Link:
      <input data-wysihtml5-dialog-field="href" value="http://">
    </label>
    <a data-wysihtml5-dialog-action="save">OK</a>&nbsp;<a data-wysihtml5-dialog-action="cancel">Cancel</a>
  </div>
  
  <div data-wysihtml5-dialog="insertImage" style="display: none;">
    <label>
      Image:
      <input data-wysihtml5-dialog-field="src" value="http://">
    </label>
    <label>
      Align:
      <select data-wysihtml5-dialog-field="className">
        <option value="">default</option>
        <option value="wysiwyg-float-left">left</option>
        <option value="wysiwyg-float-right">right</option>
      </select>
    </label>
    <a data-wysihtml5-dialog-action="save">OK</a>&nbsp;<a data-wysihtml5-dialog-action="cancel">Cancel</a>
  </div>

</div>