<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>New User</h1>
      <%= form_for :user, url: {action: 'create'}, html: {class: "form-horizontal", role: 'form'} do |f| %>
        <div class="form_group">
          <%= label(:user, :email, class: 'col-sm-2 control-label') %>
          <div class="col-sm-10">
            <%= f.text_field :email, class: 'form-control', id: 'email', placeholder: "Enter email" %>
          </div>
        </div>
        <div class="form_group">
          <%= label(:user, :password, class: 'col-sm-2 control-label') %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: 'form-control', id: 'password', placeholder: "Enter password" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <% for role in User::ROLES %>
              <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"}%>
              <%= label_tag "user_roles_#{role}", role.humanize %><br />
            <% end %>
          </div>
          <%= hidden_field_tag "user[roles][]", "" %>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Create", class: 'btn btn-default' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

