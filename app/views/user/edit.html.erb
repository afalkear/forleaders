<%= render 'users/navbar' %>
<div class="container new-article-container">
  <div class="row">
    <h1>Edit article</h1>
    <div class="col-md-4">
      <%= form_for @user, html: {multipart: true, class: "form-horizontal", role: 'form'} do |f| %>
        <div class="form-group">
          <%= label(:user, :email, class: 'col-sm-2 control-label') %>
          <div class="col-sm-10">
            <%= f.text_field :email, class: 'form-control', id: 'email', placeholder: "Place email here", value: @user.email %>
          </div>
        </div>
        <div class="form-group">
          <%= label(:user, :password, class: 'col-sm-2 control-label') %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: 'form-control', id: 'password', placeholder: "Password" %>
          </div>
        </div>
        <div class="form-group">
          <% for role in User::ROLES %>
            <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"}%>
            <%= label_tag "user_roles_#{role}", role.humanize %><br />
          <% end %>
          <%= hidden_field_tag "user[roles][]", "" %>
        </div>
        <div class="form-group">
          <%= f.check_box :approved %> Approved
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Update", class: 'btn btn-default' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
