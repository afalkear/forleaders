<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1>Users</h1>

      <%= link_to "All Users", :action => "index" %>
      |
      <%= link_to "Users awaiting approval", :action => "index", :approved => "false" %>
      | <%= link_to "New User", new_user_path %>
      <table class="table">
        <tr>
          <td>
            User
          </td>
          <td>
            Aproved?
          </td>
          <td>
            Roles
          </td>
          <td>
            Actions
          </td>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.approved %>
            </td>
            <td>
              <% for role in user.roles %>
                <%= role %>
              <% end %>
            </td>
            <td>
              <%= link_to "Edit", edit_user_path(user) %>
              | <%= link_to "Destroy", user_path(user), :confirm => "Are you sure?", method: :delete %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>