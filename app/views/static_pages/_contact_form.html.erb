      </div>
      <div class="form-group">
        <%= label(:contact_message, :phone) %>
          <%= f.text_field :phone, class: 'form-control', id: 'contact_phone', placeholder: "Telefone" %>
      </div>
      <div class="form-group">
        <%= label(:contact_message, :observations) %>
