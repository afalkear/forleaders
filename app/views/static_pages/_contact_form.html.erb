      <div class="form-group">
        <%= label(:contact_message, :email) %>
          <%= f.text_field :email, class: 'form-control', id: 'contact_email', placeholder: "Email" %>
      </div>
      <div class="form-group">
        <%= label(:contact_message, :calendar) %>
          <%= f.date_field :calendar, class: 'form-control', id: 'contact_calendar' %>
      </div>
      <div class="form-group">
        <%= label(:contact_message, :company) %>
          <%= f.text_field :company, class: 'form-control', id: 'contact_company', placeholder: "Empresa" %>
