<div class="container new-contact-form-container">
  <div class="row recommend-form">
    <%= form_for @contact_message, url: contact_message_url, html: {role: 'form'} do |f| %>
      <% if @contact_message.errors.any? %>
        <div class="error_messages">
          <h2><%= pluralize(@contact_message.errors.count, "error") %> prohibited this message from being saved:</h2>
          <ul>
          <% @contact_message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= label(:contact_message, :first_name) %>
          <%= f.text_field :first_name, class: 'form-control', id: 'contact_first_name' %>
      </div>
      <div class="form-group">
        <%= label(:contact_message, :last_name) %>
          <%= f.text_field :last_name, class: 'form-control', id: 'contact_last_name' %>
      </div>
      <div class="form-group">
        <%= label(:contact_message, :email) %>
          <%= f.text_field :email, class: 'form-control', id: 'contact_email' %>
      </div>
      <div class="form-group">
        <%= label(:contact_message, :school) %>
          <%= f.text_field :school, class: 'form-control', id: 'contact_position' %>
      </div>
      <div class="form-group">
        <%= label(:contact_message, :company) %>
          <%= f.text_field :company, class: 'form-control', id: 'contact_company' %>
      </div>
      <div class="form-group">
        <%= label(:contact_message, :observations) %>
          <%= f.text_area :observations, class: 'form-control', id: 'contact_observations' %>
      </div>
      <div class="form-group">
          <%= f.submit "#{t('helpers.label.recommend_message.submit')}", class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
